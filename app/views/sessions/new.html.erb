<% content_for :header do %>
	<header>
		<h2><%= icon('lock') %> Log In</h2>
	</header>
<% end %>

<%= form_tag sessions_path do %>

  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <div class="actions">
  	<%= submit_tag "Log In", class: "button" %>
  </div>

<% end %>